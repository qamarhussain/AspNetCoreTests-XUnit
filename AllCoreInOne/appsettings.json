{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=ANewOne_XUnit_One;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      // loging into Console window
      { "Name": "Console" },
      // loging a text file
      {
        "Name": "File",
        "Args": {
          "path": "E:\\AllCoreInOne\\AllCoreInOne\\logs\\log.txt",
          "outputTemplate": "{Timestamp:G}{Message}{NewLine:1}{Exception:1}"
        }
      },
      // loging into a json structured
      {
        "Name": "File",
        "Args": {
          "path": "E:\\AllCoreInOne\\AllCoreInOne\\logs\\log.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      // loging into Seq
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341/"
        }
      }
    ]
  }
}
